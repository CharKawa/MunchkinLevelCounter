<resources>
    <!-- Base application theme. -->
    <style name="MunchkinLevelCounterTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/actionBarBackground</item>
        <item name="colorPrimaryDark">@color/text_color</item>
        <item name="colorAccent">@color/actionBarBackground</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:colorForeground">@color/status_bar</item>
        <item name="android:navigationBarColor">@color/status_bar</item>
        <item name="android:textColorPrimaryInverse">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorSecondaryInverse">@color/background</item>
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:textColorSecondary">@color/text_color</item>
        <item name="android:statusBarColor">@color/status_bar</item>

        <item name="actionBarStyle">@style/Munchkin.ActionBar</item>
        <item name="actionBarTheme">@style/Munchkin.ThemeOverlay.AppTheme.ActionBar</item>
        <item name="actionBarPopupTheme">@style/Munchkin.ThemeOverlay.AppTheme.PopupMenu</item>

    </style>
    <style name="floating_action_button_default">
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="floating_action_button_player_default">
        <item name="android:layout_marginTop">@dimen/default_margin</item>
    </style>

    <style name="floating_action_button_monster_default">
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
    </style>

    <style name="Munchkin.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/text_color</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/text_color</item>
        <!-- Used for the background -->
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="Munchkin.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">@string/font_path</item>
    </style>

    <style name="Munchkin.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <!-- action bar background - without android prefix -->
        <item name="background">@color/actionBarBackground</item>
        <!-- action bar elevation - without android prefix -->
        <item name="elevation">4dp</item>
    </style>

    <style name="Munchkin.ThemeOverlay.AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- title text color -->
        <item name="android:textColorPrimary">@color/actionBarText_color</item>
        <!-- subtitle text color -->
        <item name="android:textColorSecondary">?android:textColorPrimary</item>
        <!-- action menu item text color -->
        <item name="actionMenuTextColor">?android:textColorPrimary</item>
        <!-- action menu item icon color -->
        <item name="colorControlNormal">?android:textColorPrimary</item>
    </style>

    <style name="Munchkin.ThemeOverlay.AppTheme.PopupMenu" parent="ThemeOverlay.AppCompat.Dark">
        <!-- popup menu background - NEVER "android:background" !!! in themes -->
        <item name="android:colorBackground">@color/background</item>
        <!-- popup menu item text color -->
        <item name="android:textColorPrimary">@color/text_color</item>
    </style>

</resources>
